<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.cary.vel.core.sys.mapper.AdminUserMapper">
    <select id="findByUserName" parameterType="string" resultType="cc.cary.vel.core.sys.entities.AdminUser">
        select * from v_admin_user where username = #{username}
    </select>

    <select id="findForPage" resultType="cc.cary.vel.core.sys.entities.AdminUser">
        select * from v_admin_user
        where 1=1
        <if test="params.username != null and params.username !=''">
            and username LIKE CONCAT('%',#{params.username},'%')
        </if>
        <if test="params.status != null and params.status != ''">
            and status = #{params.status}
        </if>
    </select>
</mapper>